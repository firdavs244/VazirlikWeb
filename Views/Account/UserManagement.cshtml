@model IEnumerable<VazirlikWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Foydalanuvchilarni boshqarish";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Ism</th>
                        <th>Familiya</th>
                        <th>Email</th>
                        <th>Ro'yxatdan o'tgan sana</th>
                        <th>Amallar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Created.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="EditUser" asp-route-id="@user.Id"
                                        class="btn btn-sm btn-primary">Tahrirlash</a>
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id"
                                        class="btn btn-sm btn-danger">O'chirish</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>