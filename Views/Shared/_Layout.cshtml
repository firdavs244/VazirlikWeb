            background: linear-gradient(135deg, #ff9800, #e65100);
            border: none;
            box-shadow: 0 4px 15px rgba(255, 152, 0, 0.4);
            color: white;
        }

        .btn-warning:hover {
            background: linear-gradient(135deg, #e65100, #ff9800);
            box-shadow: 0 8px 20px rgba(255, 152, 0, 0.6);
            transform: translateY(-2px);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #f44336, #b71c1c);
            border: none;
            box-shadow: 0 4px 15px rgba(244, 67, 54, 0.4);
        }

        .btn-danger:hover {
            background: linear-gradient(135deg, #b71c1c, #f44336);
            box-shadow: 0 8px 20px rgba(244, 67, 54, 0.6);
            transform: translateY(-2px);
        }

        /* Table Styles */
        .table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            border-radius: 10px;
            overflow: hidden;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(67, 97, 238, 0.03);
        }

        .table th {
            background: linear-gradient(135deg,
                    var(--primary-color),
                    var(--secondary-color));
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.9rem;
            letter-spacing: 0.5px;
            border: none;
            padding: 15px;
        }

        .table td {
            vertical-align: middle;
            padding: 15px;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            transition: all 0.2s ease;
        }

        .table tbody tr {
            transition: all 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: rgba(67, 97, 238, 0.05);
            transform: scale(1.01);
        }

        /* Footer Styles */
        footer {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            padding: 25px 0;
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
            box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.03);
        }

        footer p {
            margin-bottom: 0;
            font-size: 1rem;
            color: #6c757d;
        }

        footer a {
            color: var(--primary-color);
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        footer a:hover {
            color: var(--secondary-color);
            text-decoration: underline;
        }

        /* Form Controls */
        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #e0e0e0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
        }

        .form-label {
            font-weight: 500;
            color: #555;
            margin-bottom: 8px;
        }

        /* Custom Badge */
        .badge {
            padding: 8px 12px;
            font-weight: 500;
            letter-spacing: 0.5px;
            border-radius: 6px;
        }

        /* Section Headings */
        .section-heading {
            position: relative;
            margin-bottom: 30px;
            padding-bottom: 15px;
            display: inline-block;
        }

        .section-heading::after {
            content: "";
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60%;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), transparent);
            border-radius: 2px;
        }

        /* Custom Dividers */
        .custom-divider {
            height: 2px;
            background: linear-gradient(90deg, var(--primary-color), transparent);
            margin: 30px 0;
        }

        /* Image Styling */
        .img-fluid {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .img-fluid:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* Animations */
        .fade-in {
            animation: fadeIn 1s ease forwards;
        }

        /* Background Elements */
        .bg-shape {
            position: absolute;
            border-radius: 50%;
            z-index: -1;
        }

        .bg-shape-1 {
            width: 300px;
            height: 300px;
            background: radial-gradient(circle,
                    rgba(67, 97, 238, 0.1) 0%,
                    rgba(67, 97, 238, 0) 70%);
            top: -150px;
            right: -100px;
        }

        .bg-shape-2 {
            width: 400px;
            height: 400px;
            background: radial-gradient(circle,
                    rgba(76, 201, 240, 0.1) 0%,
                    rgba(76, 201, 240, 0) 70%);
            bottom: -200px;
            left: -200px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Background Elements -->
    <div class="bg-shape bg-shape-1"></div>
    <div class="bg-shape bg-shape-2"></div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <div class="container align-items-center">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-gem me-2"></i>VazirlikWeb&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Bosh sahifa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="News" asp-action="Index">
                                <i class="fas fa-newspaper"></i> Yangiliklar
                            </a>
                        </li>
                        @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="News" asp-action="Management">
                                    <i class="fas fa-tasks"></i> Yangiliklar boshqaruvi
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="UserManagement">
                                    <i class="fas fa-users-cog"></i> Foydalanuvchilar
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Assignment" asp-action="Index">
                                    <i class="fas fa-tasks"></i> Topshiriqlar
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Maxfiylik
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown" style="position:absolute; right:-250px; z-index:1000!important">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fas fa-id-card me-2"></i>Profil
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="EditProfile">
                                            <i class="fas fa-user-edit me-2"></i>Profilni tahrirlash
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                            <i class="fas fa-key me-2"></i>Parolni o'zgartirish
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post"
                                            style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="fas fa-sign-out-alt me-2"></i>Chiqish
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Ro'yxatdan o'tish
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2 px-4" asp-controller="Account"
                                    asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Kirish
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-5" data-aos="fade-up" data-aos-duration="1000">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p>
                        <i class="far fa-copyright me-1"></i> 2025 - VazirlikWeb
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="mx-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="mx-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="mx-2"><i class="fab fa-instagram"></i></a>
                    <a asp-controller="Home" asp-action="Privacy" class="mx-2"><i
                            class="fas fa-shield-alt me-1"></i>Maxfiylik siyosati</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- AOS Animation Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>

    <!-- Custom Scripts -->
    <script>
        // Initialize AOS
        AOS.init({
            once: true,
            offset: 100,
            duration: 800
        });

        // Navbar scroll effect
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.padding = '10px 0';
                navbar.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.1)';
            } else {
                navbar.style.padding = '15px 0';
                navbar.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.05)';
            }
        });

        // Add active class to current nav item
        document.addEventListener('DOMContentLoaded', function () {
            const currentLocation = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentLocation.includes(href) && href !== '/') {
                    link.classList.add('active');
                } else if (href === '/' && currentLocation === '/') {
                    link.classList.add('active');
                }
            });
        });
    </script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>