@model VazirlikWeb.Models.News

@{
    ViewData["Title"] = "Yangilikni o‘chirish";
}

<div class="container mt-4">
    <h2 class="text-danger">🗑️ Yangilikni o‘chirish</h2>

    <div class="alert alert-warning mt-3 shadow-sm rounded-3">
        <h5 class="mb-3">💬 Siz ushbu yangilikni o‘chirishni istaysizmi?</h5>

        <dl class="row">
            <dt class="col-sm-3">📌 Sarlavha</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">📝 Mazmun</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

            <dt class="col-sm-3">🖼️ Rasm havolasi</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ImageUrl)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">✅ Ha, o‘chirish</button>
            <a asp-action="Index" class="btn btn-secondary">⬅️ Yo‘q, bekor qilish</a>
        </form>
    </div>
</div>
